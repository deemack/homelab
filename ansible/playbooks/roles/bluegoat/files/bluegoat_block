server {
        listen 80;
        listen [::]:80;

        root /var/www/bluegoat.org/html;
        index index.html index.htm index.nginx-debian.html;

        server_name bluegoat.org *.bluegoat.org www.bluegoat.org;

        location / {
                try_files $uri $uri/ =404;
        }
}
